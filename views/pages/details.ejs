<div class="container-fluid">
  <!--
  <div class="container-fluid">
    <h3>Please rate your movie:</h3>
  </div>
-->

  <!-- COMMON PART -->

  <div class="container mt-4">
    <div class="well" id="movie">
      <div class="row">
        <div class="col-md-6">
          <img src="..." class="movie-poster w-100" />
        </div>
        <div class="col-md-4">
          <ul class="list-group">
            <li class="list-group-item">
              <h2 class="movie-title">Title</h2>
            </li>
            <li class="list-group-item">
              <strong>Genre:</strong>
              <div class="genre">Genre</div>
            </li>
            <li class="list-group-item">
              <strong>Release Date:</strong>
              <div class="release-date">Release Date</div>
            </li>
          </ul>
          <hr />
          <div class="well">
            <h3>Overview</h3>
            <div class="overview">overview</div>
            <hr />
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Movie</th>
                  <th>Rating</th>
                </tr>
              </thead>
              <tbody>
                <tr class="initial_rating">
                  <td class="movie-title">Title</td>
                  <td>
                    <div class="stars-outer">
                      <div class="stars-inner"></div>
                    </div>
                    <span class="number-rating"></span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- PART WITH THREE STATES STARTS -->

          <!-- STATE 1 - IF NOT LOGGED IN -->

          <div class="state-not-logged">
            <button
              class="btn btn-outline-secondary"
              id="login-to-rate-btn"
              type="submit"
              value="Submit"
            >
              Login to rate the movie
            </button>
          </div>

          <!-- STATE 1 - END -->

          <!-- STATE 2 - IF LOGGED IN AND NOT RATED THIS YET -->

          <div class="state-logged-in-not-rated input-group">
            <input
              type="number"
              id="rating-control"
              class="form-control"
              step="0.1"
              max="5"
              min="1"
              placeholder="Rate 1 - 5"
            />
            <button
              class="btn btn-outline-secondary"
              id="rate-btn"
              type="submit"
            >
              Rate
            </button>
          </div>

          <!-- STATE 2 - END -->

          <!-- STATE 3 - IF LOGGED IN AND ALREADY RATED THIS -->

          <div class="state-logged-and-rated">
            <div>
              You've rated the movie!<br />
              Stars given: <span class="user-rating-span">[variable]</span>
            </div>
          </div>

          <!-- STATE 3 - END -->

          <!-- END OF PART WITH THREE STATES -->

          <hr />

          <a
            href="/home"
            class="btn btn-outline-secondary"
            onclick="history.back(-1)"
            >Search and rate another!</a
          >
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="/static/details.js"></script>
