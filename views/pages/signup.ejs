<h1>Create an account</h1>
<ul>
    <% if (typeof errors !='undefined' ) { %>
        <% errors.forEach(error=> { %>
            <li>
                <%= error.message %>
            </li>
        <% }) %>
    <% } %>
</ul>
<div>

    <form class="form" action="/signup" method="POST">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="username">Username</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" id="username" name="username" required>
            </div>
            
            <!-- <p class="alert hidden">Not valid</p> -->
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="first_name">First name</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" id="first_name" name="first_name" required>
            </div>
            
            <!-- <p class="alert hidden">Not valid</p> -->
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="last_name">Last name</label>
            <div class="col-sm-4">
                <input class="form-control" type="text" id="last_name" name="last_name" required>
            </div>
            
            <!-- <p class="alert hidden">Not valid</p> -->
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="email">Email</label>
            <div class="col-sm-4">
                <input class="form-control" type="email" id="email" name="email" required>
            </div>
            
            <!-- <p class="alert hidden">Not valid</p> -->
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="password">Password</label>
            <div class="col-sm-4">
                <input class="form-control" type="password" id="password" name="password" required>
            </div>
            
            <!-- <p class="alert hidden">Not valid</p> -->
        </div>

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="password2">Confirm password</label>
            <div class="col-sm-4">
                <input class="form-control" type="password" id="password2" name="password2" required>
            </div>
            <!-- <p class="alert hidden">Not valid</p> -->
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<div class="signup-p">
    <p>If you already have an account, please <a href="/login">login</a>.</p>
</div>